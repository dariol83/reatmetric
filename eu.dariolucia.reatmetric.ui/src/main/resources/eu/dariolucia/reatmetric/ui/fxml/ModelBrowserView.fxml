<TitledPane fx:id="displayTitledPane" collapsible="false" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="1.0" minWidth="1.0" text="Model" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.dariolucia.reatmetric.ui.controller.ModelBrowserViewController">
   <content>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="1.0" minWidth="1.0">
         <children>
            <ToolBar maxWidth="1.7976931348623157E308" prefHeight="32.0">
               <items>
                  <Circle fx:id="serviceHealthStatus" fill="#003915" radius="8.0" stroke="WHITE" strokeType="INSIDE" />
                  <Label text=" " />
                  <Label text="Filter" />
                  <TextField fx:id="filterText" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="180.0"> 
                      <tooltip>
                          <Tooltip text="Text matching with wildcard (*)" />
                      </tooltip>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#filterClearButtonPressed" text="Clear...">
                      <tooltip>
                          <Tooltip text="Clear the specified filter" />
                      </tooltip>
                  </Button>
               </items>
            </ToolBar>
            <TreeTableView fx:id="modelTree" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="1.0" minWidth="1.0" onDragDetected="#onDragDetected" VBox.vgrow="ALWAYS">
              <columns>
                <TreeTableColumn fx:id="nameCol" editable="false" prefWidth="230.0" sortable="false" text="Model" />
                <TreeTableColumn fx:id="statusCol" editable="false" prefWidth="70.0" resizable="false" sortable="false" text="Status" />
              </columns>
            </TreeTableView>
         </children>
         <padding>
            <Insets top="0.01" />
         </padding>
      </VBox>
   </content>
</TitledPane>
