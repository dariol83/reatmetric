<?import org.controlsfx.control.textfield.CustomTextField?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<TitledPane fx:id="displayTitledPane" text="Hierarchical System Model" collapsible="false" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="1.0" minWidth="1.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.dariolucia.reatmetric.ui.controller.ModelBrowserViewController">
   <content>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="1.0" minWidth="1.0">
         <children>
            <ToolBar maxWidth="1.7976931348623157E308" prefHeight="32.0">
               <items>
                  <CustomTextField fx:id="filterText" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="260.0">
                      <tooltip>
                          <Tooltip text="Text matching (contains)" />
                      </tooltip>
                  </CustomTextField>
               </items>
            </ToolBar>
            <TreeTableView fx:id="modelTree" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="1.0" minWidth="1.0" onDragDetected="#onDragDetected" VBox.vgrow="ALWAYS">
              <columns>
                <TreeTableColumn fx:id="nameCol" editable="false" prefWidth="230.0" sortable="false" text="System Entity" />
                <TreeTableColumn fx:id="statusCol" editable="false" prefWidth="70.0" resizable="false" sortable="false" text="Status" />
              </columns>
              <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#enableItemAction" text="Enable" />
                            <MenuItem mnemonicParsing="false" onAction="#disableItemAction" text="Disable" />
                            <MenuItem mnemonicParsing="false" onAction="#expandItemAction" text="Expand all" />
                            <MenuItem mnemonicParsing="false" onAction="#collapseItemAction" text="Collapse all" />
                        </items>
                    </ContextMenu>
              </contextMenu>
            </TreeTableView>
         </children>
         <padding>
            <Insets top="0.01" />
         </padding>
      </VBox>
   </content>
</TitledPane>
