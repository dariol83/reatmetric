<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1700.0" stylesheets="@css/MainView.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.dariolucia.reatmetric.ui.controller.AlternativeMainViewController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="96.0" prefWidth="200.0">
         <children>
            <Button fx:id="sideButton" layoutX="18.0" layoutY="26.0" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0">
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="connectButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" onAction="#connectAction">
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin>
            </Button>
            <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <ImageView fitHeight="64.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </ImageView>
            <Button fx:id="infoButton" layoutX="18.0" layoutY="26.0" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" onAction="#aboutAction">
               <HBox.margin>
                  <Insets right="16.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
        <SplitPane dividerPositions="0.2" prefHeight="160.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
          <items>
            <Accordion minWidth="0.0">
              <panes>
                <TitledPane animated="false" minWidth="0.0" text="Views">
                     <content>
                        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0">
                           <content>
                              <VBox fx:id="buttonBox" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Button fx:id="monitoringViewButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="200.0" text="Monitoring" onAction="#viewAction">
                                        <properties viewLocation="/eu/dariolucia/reatmetric/ui/fxml/ParameterDataView.fxml" />
                                    </Button>
                                 </children>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </content></TitledPane>
                <TitledPane animated="false" minWidth="0.0" text="Model" />
                <TitledPane animated="false" minWidth="0.0" text="Connectors" />
              </panes>
            </Accordion>
            <TabPane fx:id="viewTabPane" prefHeight="200.0" prefWidth="200.0" side="BOTTOM" tabClosingPolicy="ALL_TABS" />
          </items>
        </SplitPane>
      <ToolBar prefHeight="24.0">
         <items>
            <Label fx:id="systemLbl" alignment="CENTER" disable="true" prefHeight="17.0" prefWidth="120.0" style="-fx-border-color: black; -fx-background-color: #c6c6c6; -fx-text-fill: #1a1a1a;" text="---" />
            <Circle fx:id="nominalCrl" fill="#003915" radius="8.0" stroke="WHITE" strokeType="INSIDE" />
            <Circle fx:id="warningCrl" fill="#382700" radius="8.0" stroke="WHITE" strokeType="INSIDE" />
            <Circle fx:id="alarmCrl" fill="#360000" radius="8.0" stroke="WHITE" strokeType="INSIDE" />
            <Label fx:id="statusLbl" prefHeight="17.0" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <Pane prefHeight="1.0" prefWidth="24.0" />
            <ProgressBar fx:id="globalProgress" prefWidth="100.0" progress="0" visible="false" />
         </items>
      </ToolBar>
   </children>
</VBox>
