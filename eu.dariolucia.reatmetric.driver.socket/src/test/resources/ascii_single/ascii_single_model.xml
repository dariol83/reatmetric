<ns1:processing xmlns:ns1="http://dariolucia.eu/reatmetric/processing/definition" path_prefix="STATION.DEVICE1.">
    <parameters>
        <!-- Subsystem 1 -->
		<parameter id="#10" location="SUB1.STATUS" description="Subsystem Status" raw_type="ENUMERATED" eng_type="CHARACTER_STRING" eng_unit="" >
			<calib_enum default="UNKNOWN">
                <point x="0" y="OFF" />
                <point x="1" y="ON" />
            </calib_enum>
            <setter activity="#1" set_argument="new_value">
                <!-- Convert? -->
                <decalib_enum default="UNKNOWN">
                    <point x="0" y="OFF" />
                    <point x="1" y="ON" />
                </decalib_enum>
                <fixed_argument name="device_subsystem" value="SUB1" raw_value="true" />
                <fixed_argument name="parameter" value="Status" raw_value="true" />
            </setter>
		</parameter>
		<parameter id="#11" location="SUB1.FREQUENCY" description="Frequency" raw_type="UNSIGNED_INTEGER" eng_type="UNSIGNED_INTEGER" eng_unit="kHz" />
		<parameter id="#12" location="SUB1.TEMPERATURE" description="Temperature" raw_type="REAL" eng_type="REAL" eng_unit="C" />
		<parameter id="#13" location="SUB1.OFFSET" description="Frequency Offset" raw_type="SIGNED_INTEGER" eng_type="SIGNED_INTEGER" eng_unit="kHz" />
		<parameter id="#14" location="SUB1.MODE" description="Operating Mode" raw_type="ENUMERATED" eng_type="CHARACTER_STRING" eng_unit="" >
			<calib_enum default="UNKNOWN">
                <point x="0" y="OFF" />
                <point x="1" y="ON" />
            </calib_enum>
		</parameter>
        <parameter id="#15" location="SUB1.SWEEP" description="Sweep Mode" raw_type="ENUMERATED" eng_type="CHARACTER_STRING" eng_unit="" >
            <calib_enum default="UNKNOWN">
                <point x="0" y="OFF" />
                <point x="1" y="ON" />
            </calib_enum>
        </parameter>
        <!-- Subsystem 2 -->
        <parameter id="#20" location="SUB2.STATUS" description="Subsystem Status" raw_type="ENUMERATED" eng_type="CHARACTER_STRING" eng_unit="" >
            <calib_enum default="UNKNOWN">
                <point x="0" y="OFF" />
                <point x="1" y="ON" />
            </calib_enum>
        </parameter>
        <parameter id="#21" location="SUB2.FREQUENCY" description="Frequency" raw_type="UNSIGNED_INTEGER" eng_type="UNSIGNED_INTEGER" eng_unit="kHz" />
        <parameter id="#22" location="SUB2.TEMPERATURE" description="Temperature" raw_type="REAL" eng_type="REAL" eng_unit="C" />
        <parameter id="#23" location="SUB2.OFFSET" description="Frequency Offset" raw_type="SIGNED_INTEGER" eng_type="SIGNED_INTEGER" eng_unit="kHz" />
        <parameter id="#24" location="SUB2.MODE" description="Operating Mode" raw_type="ENUMERATED" eng_type="CHARACTER_STRING" eng_unit="" >
            <calib_enum default="UNKNOWN">
                <point x="0" y="OFF" />
                <point x="1" y="ON" />
            </calib_enum>
        </parameter>
        <parameter id="#25" location="SUB2.SWEEP" description="Sweep Mode" raw_type="ENUMERATED" eng_type="CHARACTER_STRING" eng_unit="" >
            <calib_enum default="UNKNOWN">
                <point x="0" y="OFF" />
                <point x="1" y="ON" />
            </calib_enum>
        </parameter>
    </parameters>

    <events>
    </events>

    <activities>
        <activity id="#1" location="COMMANDS.SET_PARAMETER" description="Set a parameter to a specific value" type="DEV1-ASCII-CMD">
            <argument name="device_subsystem" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="" />
            <argument name="parameter" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="" />
            <argument name="new_value" raw_type="DERIVED" eng_type="DERIVED" eng_unit="" />
        </activity>

        <activity id="#16" location="SUB1.RESET" description="Reset the subsystem" type="DEV1-ASCII-CMD">
            <argument name="device_subsystem" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="">
                <default_fixed type="RAW" value="SUB1" />
            </argument>
            <argument name="command_code" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="" fixed="true">
                <default_fixed type="RAW" value="RST" />
            </argument>
        </activity>
        <activity id="#17" location="SUB1.START_SWEEP" description="Start sweep sequence" type="DEV1-ASCII-CMD">
            <argument name="device_subsystem" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="">
                <default_fixed type="RAW" value="SUB1" />
            </argument>
            <argument name="command_code" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="" fixed="true">
                <default_fixed type="RAW" value="SWP" />
            </argument>
            <argument name="times" raw_type="UNSIGNED_INTEGER" eng_type="UNSIGNED_INTEGER" eng_unit="" />
        </activity>
        <activity id="#18" location="SUB1.REBOOT" description="Reboot subsystem" type="DEV1-ASCII-CMD">
            <argument name="device_subsystem" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="">
                <default_fixed type="RAW" value="SUB1" />
            </argument>
            <argument name="command_code" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="" fixed="true">
                <default_fixed type="RAW" value="RBT" />
            </argument>
            <argument name="delay" raw_type="UNSIGNED_INTEGER" eng_type="UNSIGNED_INTEGER" eng_unit="" />
            <argument name="running" raw_type="UNSIGNED_INTEGER" eng_type="UNSIGNED_INTEGER" eng_unit="" />
        </activity>

        <activity id="#26" location="SUB2.RESET" description="Reset the subsystem" type="DEV1-ASCII-CMD">
            <argument name="device_subsystem" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="">
                <default_fixed type="RAW" value="SUB2" />
            </argument>
            <argument name="command_code" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="" fixed="true">
                <default_fixed type="RAW" value="RST" />
            </argument>
        </activity>
        <activity id="#27" location="SUB2.START_SWEEP" description="Start sweep sequence" type="DEV1-ASCII-CMD">
            <argument name="device_subsystem" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="">
                <default_fixed type="RAW" value="SUB2" />
            </argument>
            <argument name="command_code" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="" fixed="true">
                <default_fixed type="RAW" value="SWP" />
            </argument>
            <argument name="times" raw_type="UNSIGNED_INTEGER" eng_type="UNSIGNED_INTEGER" eng_unit="" />
        </activity>
        <activity id="#28" location="SUB2.REBOOT" description="Reboot subsystem" type="DEV1-ASCII-CMD">
            <argument name="device_subsystem" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="">
                <default_fixed type="RAW" value="SUB2" />
            </argument>
            <argument name="command_code" raw_type="CHARACTER_STRING" eng_type="CHARACTER_STRING" eng_unit="" fixed="true">
                <default_fixed type="RAW" value="RBT" />
            </argument>
            <argument name="delay" raw_type="UNSIGNED_INTEGER" eng_type="UNSIGNED_INTEGER" eng_unit="" />
            <argument name="running" raw_type="UNSIGNED_INTEGER" eng_type="UNSIGNED_INTEGER" eng_unit="" />
        </activity>

    </activities>
</ns1:processing>