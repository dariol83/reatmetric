<ns1:spacecraft xmlns:ns1="http://dariolucia.eu/reatmetric/driver/spacecraft">
	<!-- Spacecraft name -->
	<name>XXX</name>
	<!-- Spacecraft ID -->
	<id>123</id>
	<!-- Agency epoch - not specified means 1st Jan 1958 00:00:00 -->
	<!-- <obt-epoch></obt-epoch> -->
	<!-- Propagation delay - in microseconds - not specified means 0 -->
	<propagation-delay>3600000000</propagation-delay>
	<!-- TC datalink configuration -->
	<tc tc-vc="0" randomize="true" segmentation="true" map-id="0" />
	<!-- TM datalink configuration -->
	<tm 
		fecf="false" 
		derandomize="false">
		<!-- VC to be processed -->
		<vc-limit><vc>0</vc></vc-limit>
		<type>TM</type>
	</tm>
	<!-- TM packet configuration -->
	<tm-packet 
		parameter-id-offset="1000000">
		<default-pus-configuration 
			destination-field-length="0" 
			packet-subcounter-present="false" 
			tm-spare-length="0" 
			tm-pec-present="CRC">
			<obt-cuc-config explicit-p-field="false" coarse="4" fine="3" />
		</default-pus-configuration>
	</tm-packet>
	<!-- PUS configuration -->
	<services>
		<time-correlation 
			generation-frame-period="256"
			on-board-delay="0" 
			generation-period-reported="false" 
			maximum-frame-time-delay="1200000000">
			<time-format explicit-p-field="false" coarse="4" fine="3" />
		</time-correlation>
	</services>
</ns1:spacecraft>